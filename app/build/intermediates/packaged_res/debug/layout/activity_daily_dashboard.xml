<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Header with Date Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/primary"
        android:padding="20dp"
        android:elevation="4dp">

        <!-- Title Row with Settings Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ½ï¸ MealTrack"
                android:textSize="26sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/settingsButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_settings"
                android:contentDescription="Settings"
                android:background="@drawable/nav_button_background"
                android:scaleType="center"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Date Navigation Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/previousDayButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_chevron_left"
                android:contentDescription="Previous Day"
                android:background="@drawable/nav_button_background"
                android:scaleType="center"
                android:padding="12dp" />

            <TextView
                android:id="@+id/currentDateText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Today, Jan 11, 2026"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:gravity="center"
                android:padding="12dp" />

            <ImageButton
                android:id="@+id/nextDayButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_chevron_right"
                android:contentDescription="Next Day"
                android:background="@drawable/nav_button_background"
                android:scaleType="center"
                android:padding="12dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Streak Widget -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/streakWidget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="ðŸ”¥"
                android:textSize="32sp"
                android:gravity="center"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/streakTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Healthy Meals Streak"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/streakSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keep it going!"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/streakCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="days"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Scrollable Meal Slots -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <!-- Breakfast Slot -->
            <include
                android:id="@+id/breakfastSlot"
                layout="@layout/meal_slot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <!-- Lunch Slot -->
            <include
                android:id="@+id/lunchSlot"
                layout="@layout/meal_slot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <!-- Evening Snacks Slot -->
            <include
                android:id="@+id/eveningSnacksSlot"
                layout="@layout/meal_slot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <!-- Dinner Slot -->
            <include
                android:id="@+id/dinnerSlot"
                layout="@layout/meal_slot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="16dp"
        android:background="@color/surface"
        android:elevation="8dp"
        android:gravity="center_vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addMealButton"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Add Meal"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary"
            android:layout_marginEnd="6dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/viewSummaryButton"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Insights"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/goalsButton"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Goals"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary"
            android:layout_marginStart="6dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp" />

    </LinearLayout>

</LinearLayout>

