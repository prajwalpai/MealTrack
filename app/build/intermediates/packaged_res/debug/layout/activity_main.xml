<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ½ï¸ Meal Logger"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:layout_marginBottom="28dp" />

        <!-- Meal Name Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meal Name"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/mealNameInput"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="@string/meal_name_hint"
            android:inputType="text"
            android:padding="16dp"
            android:textSize="16sp"
            android:background="@drawable/rounded_input_background"
            android:layout_marginBottom="20dp" />

        <!-- Date Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/dateSelector"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Today"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@drawable/rounded_input_background"
            android:clickable="true"
            android:focusable="true"
            android:drawableEnd="@android:drawable/ic_menu_my_calendar"
            android:drawablePadding="8dp"
            android:layout_marginBottom="20dp" />

        <!-- Meal Type Dropdown -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meal Type"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/mealTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:padding="16dp"
            android:layout_marginBottom="20dp" />

        <!-- Category Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/healthyButton"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="Healthy"
                android:textSize="13sp"
                android:textStyle="bold"
                android:backgroundTint="@color/healthy"
                android:textColor="@color/white"
                app:icon="@drawable/ic_healthy"
                app:iconTint="@color/white"
                app:iconGravity="top"
                app:iconPadding="4dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginEnd="6dp"
                app:elevation="6dp"
                app:pressedTranslationZ="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/neutralButton"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="Neutral"
                android:textSize="13sp"
                android:textStyle="bold"
                android:backgroundTint="@color/neutral"
                android:textColor="@color/white"
                app:icon="@drawable/ic_neutral"
                app:iconTint="@color/white"
                app:iconGravity="top"
                app:iconPadding="4dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                app:elevation="6dp"
                app:pressedTranslationZ="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/junkButton"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="Junk"
                android:textSize="13sp"
                android:textStyle="bold"
                android:backgroundTint="@color/junk"
                android:textColor="@color/white"
                app:icon="@drawable/ic_junk"
                app:iconTint="@color/white"
                app:iconGravity="top"
                app:iconPadding="4dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginStart="6dp"
                app:elevation="6dp"
                app:pressedTranslationZ="12dp" />

        </LinearLayout>

        <!-- Save Button -->
        <Button
            android:id="@+id/saveMealButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/save_meal"
            android:textSize="17sp"
            android:textStyle="bold"
            android:backgroundTint="@color/primary"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp" />

        <!-- Delete Button (only visible in edit mode) -->
        <Button
            android:id="@+id/deleteMealButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ—‘ï¸ Delete Meal"
            android:textSize="17sp"
            android:textStyle="bold"
            android:backgroundTint="@color/junk"
            android:textColor="@color/white"
            android:visibility="gone"
            android:layout_marginBottom="32dp" />

    </LinearLayout>

</ScrollView>

