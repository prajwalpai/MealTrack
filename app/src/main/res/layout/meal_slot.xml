<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="14dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/card_background"
    android:layout_margin="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- Meal Type Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/mealTypeIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_breakfast"
                android:contentDescription="Meal Type Icon"
                android:layout_marginEnd="10dp" />

            <TextView
                android:id="@+id/mealTypeLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BREAKFAST"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <View
                android:id="@+id/categoryIndicatorSlot"
                android:layout_width="5dp"
                android:layout_height="40dp"
                android:background="@color/text_hint"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Meal Content (shown when meal exists) -->
        <LinearLayout
            android:id="@+id/mealContentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/mealNameSlot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oatmeal with Fruits"
                android:textSize="17sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/mealTimeSlot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7:30 AM"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/categoryBadgeSlot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Healthy"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@color/healthy"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginEnd="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Empty State (shown when no meal) -->
        <LinearLayout
            android:id="@+id/emptyStateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Not logged yet"
                android:textSize="14sp"
                android:textColor="@color/text_hint" />

            <Button
                android:id="@+id/addMealSlotButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="+ Add"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:backgroundTint="@color/primary_light"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:minWidth="0dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

